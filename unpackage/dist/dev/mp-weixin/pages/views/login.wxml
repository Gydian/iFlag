<view><view class="logo-box"><image style="width:200px;height:200px;background-color:#eeeeee;" src="{{src}}" data-event-opts="{{[['error',[['imageError',['$event']]]]]}}" binderror="__e"></image></view><view class="input-box"><text class="text">邮箱：</text><input class="login-input" focus placeholder="请输入邮箱" data-event-opts="{{[['input',[['__set_model',['$0','mail','$event',[]],['loginInfo']]]]]}}" value="{{loginInfo.mail}}" bindinput="__e"/></view><view class="input-box"><text class="text">密码：</text><input class="login-input" focus placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['loginInfo']]]]]}}" value="{{loginInfo.password}}" bindinput="__e"/></view><view class="btn-box"><button class="login-btn" type="default" data-event-opts="{{[['tap',[['login']]]]}}" bindtap="__e">登录</button><button class="login-btn" type="default" data-event-opts="{{[['tap',[['register']]]]}}" bindtap="__e">注册</button></view></view>